{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}/src/debug"
            },
        },
        {
            "type": "shell",
            "label": "cmake",
            "command": "cmake ../..",
            "options": {
                "cwd": "${workspaceFolder}/src/debug"
            },
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/src/execute/ns ${workspaceFolder}/examples/e48.ns",
            "problemMatcher": []
        }

    ]
} 